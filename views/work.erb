<script>
	// fix sub nav on scroll
	// this part initializes variables to use below, using jquery's offset()
	// function to the pixel height at which we should fix subnav
	// http://api.jquery.com/offset/

	var $win = $(window)
	  , $nav = $('.subnav')
	  , navTop = $('.subnav').length && $('.subnav').offset().top - $(".navbar-fixed-top").height()
	  , isFixed = 0

	// call processScroll, below, once when you load the page
	processScroll()
	// and every time the user scrolls
	$win.on('scroll', processScroll)

	// 
	function processScroll() {
	  var i, scrollTop = $win.scrollTop()
	  if (scrollTop >= navTop && !isFixed) {
	    isFixed = 1
	    $nav.addClass('subnav-fixed')
	  } else if (scrollTop <= navTop && isFixed) {
	    isFixed = 0
	    $nav.removeClass('subnav-fixed')
	  }
	}
	
</script>
